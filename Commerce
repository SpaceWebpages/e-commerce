    <script id="wishlist-handler">
        document.addEventListener('DOMContentLoaded', function() {
            const wishlistButtons = document.querySelectorAll('[class*="ri-heart"]');
            wishlistButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const isInWishlist = this.classList.contains('ri-heart-fill');
                    if (isInWishlist) {
                        this.classList.remove('ri-heart-fill', 'text-red-500');
                        this.classList.add('ri-heart-line', 'text-gray-400');
                    } else {
                        this.classList.remove('ri-heart-line', 'text-gray-400');
                        this.classList.add('ri-heart-fill', 'text-red-500');
                    }
                });
            });
        });
    </script>
